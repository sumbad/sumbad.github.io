{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": false,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "./",
    "baseUrl": "./"
  },
  // "include": [
  // "src/views/**/*",
  // "./src/typings/**/*",
  // "./**/*"
  // ],
  // "exclude": [
  //   "node_modules"
  //   // "./src/server/"
  // ],
  "compileOnSave": false
}